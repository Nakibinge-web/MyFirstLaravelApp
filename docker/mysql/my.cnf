[mysqld]
# Character Set Configuration
# Use utf8mb4 for full Unicode support including emojis
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci

# Connection Settings
# Maximum number of concurrent connections
max_connections=200

# InnoDB Settings
# Buffer pool size - adjust based on available memory
# Recommended: 50-70% of available RAM for dedicated DB server
# For development: 256MB is reasonable
innodb_buffer_pool_size=256M

# InnoDB log file size for better write performance
innodb_log_file_size=64M

# InnoDB flush method for better performance
innodb_flush_method=O_DIRECT

# InnoDB flush log at transaction commit
innodb_flush_log_at_trx_commit=2

# Query Cache (disabled in MySQL 8.0+, but kept for compatibility)
# query_cache_type=0
# query_cache_size=0

# Logging
# General query log (disable in production)
general_log=0

# Slow query log for performance monitoring
slow_query_log=1
slow_query_log_file=/var/log/mysql/slow-query.log
long_query_time=2

# Binary logging for replication (optional for development)
# log_bin=/var/log/mysql/mysql-bin.log
# binlog_expire_logs_seconds=604800

# Performance Schema
performance_schema=ON

# Table Settings
# Default storage engine
default_storage_engine=InnoDB

# Maximum allowed packet size
max_allowed_packet=64M

# Sort buffer size
sort_buffer_size=2M

# Read buffer size
read_buffer_size=2M

# Join buffer size
join_buffer_size=2M

# Temporary table size
tmp_table_size=64M
max_heap_table_size=64M

# Thread cache size
thread_cache_size=8

# Table open cache
table_open_cache=2000

[mysql]
# Default character set for mysql client
default-character-set=utf8mb4

[client]
# Default character set for all clients
default-character-set=utf8mb4
